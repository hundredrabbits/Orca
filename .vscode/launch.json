{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Main Process",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/desktop",
			"runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron.cmd"
			},
			"args": ["."],
			"outputCapture": "std",
			"sourceMaps": true
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/desktop/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/desktop/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "${workspaceRoot}/desktop/main.js",
        "--remote-debugging-port=9222"
      ],
      "webRoot": "${workspaceRoot}/desktop/"
    }
	]
}
